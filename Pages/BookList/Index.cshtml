@page
@model BookRazor.Pages.BookList.IndexModel
@{
    <br />
    <div class="container row p-0 m-0">
        <div class="col-9">
            <h2 class="text-info">Book List</h2>
        </div>
        <div class="col-3"> 
            <a asp-page="Create" class="btn btn-info form-control text-white">Create Book</a>

        </div>

        <div class="col-12 border p-3 mt-3">
            <form method="post">
                @if (Model.Books.Count() > 0)
                {
                    <table class="table table-striped border">
                        <tr class="table-secondary">
                            <th>
                                <label asp-for="Books.FirstOrDefault().Title"></label>
                            </th>
                            <th>
                                <label asp-for="Books.FirstOrDefault().author"></label>
                            </th>



                        </tr>
                        @foreach (var item in Model.Books)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m=>item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(m=>item.author)
                                </td>
                                <td>
                                        <button class="btn btn-danger btn-sm">Delete</button>
                                        <a class="btn btn-success btn-sm">Edit</a>
                                </td>

                            </tr>
                        }

                    </table>
                }
                else
                {
                    <p>Book no available</p>
                }


            </form>
        </div>

    </div>
}
